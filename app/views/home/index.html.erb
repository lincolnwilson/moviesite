<div class='container text-center mx-auto'>
	<% if flash[:alert] %>
		<div class="alert alert-warning"><%= flash[:alert] %></div>
	<% end %>
	<div class='row'>
		<div class='col-lg-6'>	
			<h2>moviesite</h2>
			<p>A simple movie review and rating blog site.</p>
		</div>
		<div class='col-lg-6'>
			<%= form_with(url: search_path, method: 'get', local: true) do %>
			  <div class="form-group">
			    <%= label_tag :movie, 'Search for a movie' %>
			    <%= text_field_tag :movie, nil, placeholder: 'Eg. Seven Samurai', class: 'form-control' %>
			  </div>
			  <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
			<% end %>
		</div>
	</div>
</div>
